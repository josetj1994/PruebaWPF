<Window x:Class="PruebaWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PruebaWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="añadir" Content="Añadir" HorizontalAlignment="Left" Margin="494,353,0,0" VerticalAlignment="Top" Width="75" Click="añadir_Click" RenderTransformOrigin="1.24,5.6"/>
        <DataGrid x:Name="tablaAlimentos" ItemsSource="{Binding Path=listaAlimentos}" AutoGenerateColumns="True" HorizontalAlignment="Left" Height="284" Margin="170,44,0,0" VerticalAlignment="Top" Width="486"/>
        <Button x:Name="modificar" Content="Modificar" HorizontalAlignment="Left" Margin="282,353,0,0" VerticalAlignment="Top" Width="75" Click="modificar_Click"/>
    </Grid>
</Window>
